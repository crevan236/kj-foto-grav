<div class="container">
  <section id="offer" class="row panel">
  	<div class="col content">
  		<div class="row">
  			<div class="col">
  				<h2 class="section-title">{{page.header.title}}</h2>
  			</div>
  		</div>
  		<div class="row">
  			{% for section in page.header.sections %}
  				<div class="col-12 col-sm-12 col-md-6 pricing-box">
  					<div class="row">
  						<div class="col" >
  							<h3>{{section.title}}</h3>
  							<hr>
  							<p>{{section.desc|markdown}}</p>
  						</div>
  					</div>
  				</div>
        {% endfor %}
  		</div>
  	</div>
  </section>
</div>